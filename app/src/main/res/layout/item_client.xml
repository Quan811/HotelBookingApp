<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="5dp"
            >
            <ImageView
                android:id="@+id/hotel_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cardview"
            android:text="Hera Boutique Hotel"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/hotel_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cardview"
            android:text="Da Lat, Viet Nam"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_below="@+id/hotel_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VND"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/cardview"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/hotel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="550.000"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/cardview"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/hotel_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-40%"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:layout_toRightOf="@id/hotel_price"
            android:layout_marginTop="74dp"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            />
        
    </RelativeLayout>
</androidx.cardview.widget.CardView>